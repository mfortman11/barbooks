---
interface Props {
  content: string;
  position?: 'left' | 'right';
  rotation?: number;
  icon?: string;
}

const { 
  content, 
  position = 'right', 
  rotation = Math.random() * 8 - 4, // Random rotation between -4 and 4 degrees
  icon = 'âš¡' 
} = Astro.props as Props;

const rotationStyle = `transform: rotate(${rotation}deg);`;
const positionClass = position === 'left' ? 'left-4' : 'right-4';
---

<div 
  class={`action-badge absolute top-8 ${positionClass} max-w-48 z-10 print:block`}
  style={rotationStyle}
>
  <div class="bg-white border-2 border-dashed border-orange-400 rounded-lg p-3 shadow-lg">
    <div class="flex items-start space-x-2">
      <div class="text-orange-500 text-xl flex-shrink-0 mt-0.5">
        {icon}
      </div>
      <div class="text-sm text-gray-700 font-medium leading-tight">
        <div class="text-orange-600 font-bold text-xs uppercase tracking-wide mb-1">
          Spice it up!
        </div>
        <div set:html={content} />
      </div>
    </div>
  </div>
</div>

<style>
  .action-badge {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  }
  
  @media print {
    .action-badge {
      position: absolute;
      z-index: 10;
    }
  }
</style>