---
import Layout from '../layouts/Layout.astro';
import { pageConfig } from '../utils/pageConfig.js';
---

<Layout title="Page Not Found - Book Reader" totalPages={pageConfig.totalPages}>
  <div class="bg-red-50 border border-red-200 rounded-lg p-8 max-w-4xl mx-auto">
    <h2 class="text-2xl font-bold text-red-800 mb-4">Page Not Found</h2>
    <p class="text-red-700">Sorry, the page you're looking for doesn't exist. Valid pages are 1-{pageConfig.totalPages}.</p>
    <a href="/barbook/1/" class="inline-block mt-4 bg-blue-500 hover:bg-blue-600 text-white px-6 py-2 rounded transition-colors duration-200">
      Go to Page 1
    </a>
  </div>
</Layout>